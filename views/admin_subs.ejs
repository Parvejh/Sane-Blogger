<section class="bg-white border rounded-xl p-6">
  <h2 class="text-xl font-semibold mb-4">Subscriptions</h2>

  <% if (subscribers.length <= 0) { %>
    <div>No Subscriber available right now.</div>
  <% } else { %>
    <ul class="divide-y">
      <% subscribers.forEach(sub => { %>
        <li class="py-3 flex items-center justify-between">
          <span><%= sub.email %></span>
          <a class="text-sm text-red-600 underline" href="/user/admin/deletesubscriber/<%= sub._id %>">Delete</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>
