<section class="max-w-md mx-auto bg-white border rounded-xl p-6">
  <h2 class="text-xl font-semibold mb-4">Login</h2>
  <form action="/user/createSession" method="POST" class="space-y-4">
    <label class="block">
      <span class="text-sm">Email</span>
      <input type="email" name="email" required class="mt-1 w-full border rounded-lg px-3 py-2">
    </label>
    <label class="block">
      <span class="text-sm">Password</span>
      <input type="password" name="password" required class="mt-1 w-full border rounded-lg px-3 py-2">
    </label>
    <button class="w-full bg-black text-white rounded-lg py-2">Login</button>
  </form>
  <div class="mt-4 text-sm">
    <a class="underline" href="/user/signUp">Sign Up</a>
  </div>
</section>