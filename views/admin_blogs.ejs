<section class="bg-white border rounded-xl p-6">
    <h2 class="text-xl font-semibold mb-4">Blogs List</h2>

    <% if (blogs.length <= 0) { %>
        <div>No Blogs available. <a class="underline" href="/user/admin">Add Blogs</a></div>
    <% } else { %>
        <div class="space-y-4">
            <% blogs.forEach(blog => { %>
            <article class="border rounded-lg p-4">
                <h3 class="font-semibold text-lg"><%= blog.title %></h3>
                <p class="text-sm text-gray-500"><%= blog.author %> â€¢ <%= blog.createdAt.toDateString() %></p>
                <div class="mt-3">
                    <a class="text-sm underline" href="/blog/<%= blog._id %>">View</a>
                    <a class="text-sm text-red-600 underline ml-4" href="/user/admin/deleteBlog/<%= blog._id %>">Delete Blog</a>
                </div>
            </article>
            <% }) %>
        </div>
    <% } %>
</section>
