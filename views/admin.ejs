<section class="bg-white border rounded-xl p-6 min-h-full">
  <h2 class="text-xl font-semibold mb-4">Add a Blog</h2>

  <form action="/user/admin/createBlog" method="POST" enctype="multipart/form-data" class="space-y-4">
    <label class="block">
      <span class="text-sm">Upload thumbnail</span>
      <input type="file" name="image" accept="image/*" required class="mt-1 w-full">
    </label>

    <label class="block">
      <span class="text-sm">Blog title</span>
      <input name="title" required class="mt-1 w-full border rounded-lg px-3 py-2">
    </label>

    <label class="block">
      <span class="text-sm">Blog category</span>
      <select name="category" required class="mt-1 w-full border rounded-lg px-3 py-2">
        <option>Technology</option><option>LifeStyle</option><option>Business</option>
        <option>Entertainment</option><option>Education</option><option>Science</option>
        <option>Art & Design</option><option>Politics & Society</option>
        <option>Opinion & Commentary</option><option>Sports</option><option>History</option>
      </select>
    </label>

    <!-- Quill editor -->
    <div>
      <span class="text-sm">Blog description</span>
      <div id="editor" class="mt-1 border rounded-lg bg-white min-h-[220px]"></div>
      <!-- This hidden input keeps the SAME name the server expects -->
      <input type="hidden" name="content" id="content">
    </div>

    <button class="bg-black text-white rounded-lg px-5 py-2">Create Blog</button>
  </form>
</section>

<script src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet" />

<script>
  const quill = new Quill('#editor', { theme: 'snow' });
  document.querySelector('form').addEventListener('submit', () => {
    document.querySelector('#content').value = quill.root.innerHTML;
  });
</script>
